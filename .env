# Server Configuration
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/legalbuddy
MONGODB_USER=your_mongodb_user
MONGODB_PASS=your_mongodb_password

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_refresh_token_secret_here
JWT_REFRESH_EXPIRES_IN=30d

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_specific_password
SMTP_FROM=LegalBuddy <your_email@gmail.com>

# Redis Configuration (for caching and rate limiting)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# AWS Configuration (for file storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=your_aws_region
AWS_BUCKET_NAME=your_bucket_name

# AI Service Configuration
OPENAI_API_KEY=your_openai_api_key
GOOGLE_AI_API_KEY=your_google_ai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key

# Video Call Configuration
TURN_SERVER_URL=your_turn_server_url
TURN_SERVER_USERNAME=your_turn_server_username
TURN_SERVER_CREDENTIAL=your_turn_server_credential

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE_PATH=logs
LOG_MAX_SIZE=5242880
LOG_MAX_FILES=5

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
CORS_ORIGIN=http://localhost:3000
SESSION_SECRET=your_session_secret
COOKIE_SECRET=your_cookie_secret

# Feature Flags
ENABLE_EMAIL_VERIFICATION=true
ENABLE_TWO_FACTOR_AUTH=false
ENABLE_SOCIAL_LOGIN=false
ENABLE_FILE_UPLOAD=true
ENABLE_VIDEO_CALLS=true

# Payment Gateway (if needed)
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Analytics (if needed)
GOOGLE_ANALYTICS_ID=your_ga_id
SENTRY_DSN=your_sentry_dsn

# Cache Configuration
CACHE_TTL=3600
CACHE_PREFIX=legalbuddy

# API Keys for External Services
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token

# Development Tools
ENABLE_SWAGGER=true
ENABLE_GRAPHQL_PLAYGROUND=true
DEBUG_MODE=true

# Monitoring
ENABLE_HEALTH_CHECK=true
ENABLE_METRICS=true
PROMETHEUS_PORT=9090

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 0 * * *"
BACKUP_RETENTION_DAYS=7

# Email Templates
EMAIL_TEMPLATE_PATH=src/backend/templates/emails
EMAIL_LOGO_URL=https://your-domain.com/logo.png
EMAIL_FOOTER_TEXT="Â© 2024 LegalBuddy. All rights reserved."

# Notification Settings
PUSH_NOTIFICATION_KEY=your_push_notification_key
FCM_SERVER_KEY=your_fcm_server_key

# Search Configuration
ELASTICSEARCH_NODE=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=your_elasticsearch_password

# Document Processing
OCR_API_KEY=your_ocr_api_key
PDF_PROCESSING_ENABLED=true

# Time Zone
TZ=UTC

# Memory Limits
NODE_OPTIONS="--max-old-space-size=4096"

# SSL Configuration (for production)
SSL_KEY_PATH=/path/to/ssl/private.key
SSL_CERT_PATH=/path/to/ssl/certificate.crt
SSL_CA_PATH=/path/to/ssl/ca_bundle.crt